{
  "name": "legal-assistant-backend",
  "version": "1.0.0",
  "description": "Backend API for Legal Assistant AI Mentor",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "start:prod": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.json",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.json --watch",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.json --coverage",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.json tests/unit",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.json tests/integration",
    "test:system": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.json tests/system"
  },
  "keywords": [
    "ai",
    "mentor",
    "github",
    "analysis"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^4.0.7",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^5.0.3",
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  }
